#!/bin/bash

# V5 - 5 Strategies Productive Development Tool
# Cross-platform launcher script

# Read version from VERSION file
VERSION="$(cat "$(dirname "${BASH_SOURCE[0]}")/VERSION" 2>/dev/null || echo "unknown")"

# Handle version flag
if [[ "$1" == "--version" || "$1" == "-v" ]]; then
    echo "V5 - 5 Strategies Productive Development Tool v$VERSION"
    exit 0
fi

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Set up Python path and run
export PYTHONPATH="$SCRIPT_DIR/src:$PYTHONPATH"
python3 "$SCRIPT_DIR/src/core/v5_system.py" "$@"
